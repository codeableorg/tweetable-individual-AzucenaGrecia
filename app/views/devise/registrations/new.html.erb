<div class="flex flex-col w-2/4 m-auto mt-10 bg-white">
  <div class="border border-solid border-gray-300 py-3 text-center text-3xl font-bold text-black">Sign up</div>

  <div class="form-edit-user py-8 px-12">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class:"flex flex-col gap-2.5"}) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, class:"text-blue-500" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"px-2.5 py-2.5 border border-solid border-blue-400 rounded-lg text-gray-500 w-full" %>
      </div>

      <div class="field">
        <%= f.label :username, class:"text-blue-500" %><br />
        <%= f.text_field :username, autocomplete: "username",class:"px-2.5 py-2.5 border border-solid border-blue-400 rounded-lg text-gray-500 w-full" %>
      </div>

      <div class="field">
        <%= f.label :name , class:"text-blue-500"%><br />
        <%= f.text_field :name, autocomplete: "name",class:"px-2.5 py-2.5 border border-solid border-blue-400 rounded-lg text-gray-500 w-full" %>
      </div>

      <div class="field">
        <%= f.label :avatar , class:"text-blue-500"%><br />
        <div  class= "px-2.5 py-2.5 border border-solid border-blue-400 rounded-lg text-gray-500 w-full"><%= f.file_field :avatar %></div>
      </div>

      <div class="field">
        <%= f.label :password , class:"text-blue-500" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password",class:"px-2.5 py-2.5 border border-solid border-blue-400 rounded-lg text-gray-500 w-full" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation , class:"text-blue-500" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"px-2.5 py-2.5 border border-solid border-blue-400 rounded-lg text-gray-500 w-full" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "bg-blue-500 hover:bg-blue-400 text-white font-bold py-2 px-4 rounded-full mr-3"  %>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>

    
  </div>
  
</div>

